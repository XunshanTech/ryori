.form-group
  label
    span.text-danger &nbsp;*&nbsp;
    | 推荐标题
  input.form-control(type='text', ng-model='season.title', required)
.table-responsive.form-group
  table.table.table-striped
    tbody
      tr(ng-repeat='food in season.foods')
        td
          .row(ng-show='!food.isEditing')
            .col-md-4
              .season-food-name
                b 食材：
                a(ng-href='/season/{{season._id}}/food/{{food._id}}', target='_blank') {{food.name}}
              .season-food-image(ng-if='food.images.length')
                img(ng-src='{{food.images[0]}}')
            .col-md-5
              .season-food-restaurants
                .season-food-restaurants-title 餐厅列表：
                .season.food-restaurant(ng-repeat='restaurantId in food.restaurants')
                  | {{foods[restaurantId]}}
            .col-md-3.text-center
              a(ng-click='toEditFood($index)', class='btn btn-primary btn-sm')
                span 编辑食材
              | &nbsp;&nbsp;
              a(ng-click='delFood($index)', class='btn btn-danger btn-sm')
                span 删除食材
          div(ng-show='food.isEditing', ng-init='food_index = $index')
            - var isNewFood = false
              include food-edit
p.clearfix
  a.form-control.btn.btn-primary.pull-right(ng-click='showCreateFood(true)') + 增加应季食材
.panel(ng-show='editingFood')
  .panel-body
    - var isNewFood = true
      include food-edit