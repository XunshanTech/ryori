include include/csrf
ul.nav.nav-tabs
  - var tabs = [['all', '全部'], [3, '达人'], [2, '资深'], [1, '普通']]
  - each tab in tabs
    li(ng-class='{ "active": "#{tab[0]}"==selTabIndex }', role='presentation')
      a(ng-click='selTab("#{tab[0]}")', href='javascript:{}') #{tab[1]}
p:.table-responsive
  table.table.table-striped
    thead
      tr
        th.text-center 用户详情
        th.text-center 操作
    tbody
      tr(ng-repeat='user in wrapData.users')
        td.col-md-10
          include include/user-wx-detail
        td.col-md-2.text-center.super-action
          a(href='javascript:{}', class='btn btn-danger btn-sm', ng-click='delUser($index, !user.isDel)', ng-hide='user.isAdmin || user.isSuperAdmin')
            span(ng-show='!user.isDel') 删除该用户(可恢复)
            span(ng-show='user.isDel') 恢复该用户
include include/pagination